@page
@model FitnessTracker.Pages.Workouts.AddWorkoutsModel
@{
}

<form method="post">

    <h1 class="mb-3">Add Workout</h1>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="AddWorkoutRequest.WorkoutName" />
    </div>

   <div class="mb-3">
    <label class="form-label">Dato</label>
        <input type ="date" class="form-control" asp-for="AddWorkoutRequest.WorkoutDate" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>